@model Category

<form asp-controller="Category" asp-action="Create" method="post">
    <table class="table">
        <tbody>
            <tr>
                <td>
                    <label asp-for="CategoryName">Category Name</label>
                </td>
                <td>
                    <input asp-for="CategoryName" class="form-control" placeholder="Enter Category Name" />
                </td>
            </tr>
           
            <tr>
                <td>
                    <label asp-for="CategoryDescription">Category Description</label>
                </td>
                <td>
                    <textarea asp-for="CategoryDescription" class="form-control" placeholder="Enter Category Description"></textarea>
                </td>
            </tr>

        </tbody>


    </table>


    <button type="submit" class="btn btn-primary">Submit</button>

</form>
