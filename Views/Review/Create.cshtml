@model Review

<form asp-controller="Review" asp-action="Create" method="post">
    <table class="table">
        <tbody>
            <tr>
                <td>
                    <label asp-for="ReviewerName">Reviewer Name</label>
                </td>
                <td>
					<input asp-for="ReviewerName" class="form-control" placeholder="Enter Name" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="ReviewTitle">Review Title</label>
                </td>
                <td>
                    <input asp-for="ReviewTitle" class="form-control" placeholder="Enter Title" />
                </td>
            </tr>
            <tr>
                <td>
                    <label asp-for="ReviewDescription">Review Description</label>
                </td>
                <td>
                    <textarea asp-for="ReviewDescription" class="form-control" placeholder="Enter Description"></textarea>
                </td>
            </tr>

            <tr>
                <td>
                    <label asp-for="Rating">Rating</label>
                </td>
                <td>
                    <input asp-for="Rating" type="number" min="0" max="5" class="form-control" placeholder="Rating" />
                </td>
            </tr>


        </tbody>


    </table>
    

    <button type="submit" class="btn btn-primary">Submit</button>
    
</form>
